<h1>Add Another Favorite</h1>

<div class="row">
<div class="favorites col-md-7">
<% if @bands.count != current_user.favorite_bands.count %>
    <% @bands.each do |b| %>
        <% if !current_user.favorite_bands.exists?(b.id) %>
            <div>
                <%= b.name %>
                <%= link_to " +", band_favorites_path(b), method: :post %>

            </div>
        <% end %>
    <% end %>
<% else %>
    <h3>Dude, no bands, you've already favorited all of them - remember?</h3>
<% end %>
</div>
<h3>Add a Band:</h3>
<div class="favorites col-md-3 ">
<table>
<tbody>
<%= form_for @band do |f| %>
    <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit class: "btn btn-success" %></td>
    </tr>
<% end %>
</tbody>
</table>
</div>
</div>
